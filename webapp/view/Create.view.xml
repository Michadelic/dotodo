<mvc:View
	controllerName="michadelic.dotodo.controller.Create"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		showNavButton="true"
		navButtonPress=".onBack"
		title="{i18n>createTitle}">
		<headerContent>
			<Button
				type="Emphasized"
				icon="sap-icon://save"
				press=".onSave"/>
		</headerContent>
		<content>
			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout">
				<Label
					labelFor="todoTitle"
					text="{i18n>createTitleLabel}"/>
				<Input
					id="todoName"
					value="{title}"/>
				<Label
					labelFor="todoDescription"
					text="{i18n>createDescriptionLabel}"/>
				<Input
					id="todoDescription"
					value="{description}"/>
				<Label
					labelFor="todoIcon"
					text="{i18n>createIconLabel}"/>
				<Input
					id="todoIcon"
					value="{icon}"/>
				<Label
					labelFor="todoAmount"
					text="{i18n>createAmountLabel}"/>
				<Input
					id="todoAmount"
					value="{amount}"
					description="{i18n>createFrequencyDescription}"
					fieldWidth="90%"/>
				<Label
					labelFor="todoFrequency"
					text="{i18n>createFrequencyLabel}"/>
				<Select
					id="todoFrequency"
					selectedKey="{frequency}">
					<core:Item key="day" text="{i18n>createFrequencyOptionDay}" />
					<core:Item key="week" text="{i18n>createFrequencyOptionWeek}" />
					<core:Item key="month" text="{i18n>createFrequencyOptionMonth}" />
				</Select>
			</form:SimpleForm>
		</content>
	</Page>
</mvc:View>