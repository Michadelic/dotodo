<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Create"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		showNavButton="true"
		navButtonPress=".onBack"
		title="{i18n>createTitle}">
		<headerContent>
			<Button
				type="Emphasized"
				icon="sap-icon://save"
				press=".onSave"/>
		</headerContent>
		<content>
			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout">
				<Label
					labelFor="todoTitle"
					text="{i18n>createTitleLabel}"/>
				<Input
					id="todoName"
					value="{title}"/>
				<Label
					labelFor="todoDescription"
					text="{i18n>createDescriptionLabel}"/>
				<Input
					id="todoDescription"
					value="{description}"/>
				<Label
					labelFor="todoIcon"
					text="{i18n>createIconLabel}"/>
				<Input
					id="todoIcon"
					value="{icon}"/>
			</form:SimpleForm>
		</content>
	</Page>
</mvc:View>